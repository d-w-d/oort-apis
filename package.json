    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.18.2",
        "express": "^4.15.5",
        "mysql": "^2.14.1",
        "pm2": "^3.2.9",
        "reflect-metadata": "^0.1.10",
        "rimraf": "^2.6.3",
        "typeorm": "^0.1.16"
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.5",
        "@types/express": "^4.0.37",
        "@types/node": "^9.4.7",
        "typescript": "^3.3.1"
    }
}
